<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/fragment_top_margin"
    android:layout_marginStart="@dimen/text_horizontal_margin"
    android:layout_marginEnd="@dimen/text_horizontal_margin">

    <TextView
        android:textSize="@dimen/font_size_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/location_denied_message"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/fragment_top_margin"
        android:text="@string/location_denied_open_settings_button"
        android:onClick="locationDenied_didTapOpenSettingsButton" />

</LinearLayout>
